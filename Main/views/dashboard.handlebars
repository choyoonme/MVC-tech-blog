<section class="new-post-section">
  <button type="submit" class="btn" id="create-new-post">Create post</button>
</section>


{{#if posts.length}}
<section>
  <h2>Dashboard</h2>
  <ul class="post-list">
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ul>
</section>
{{/if}}

<script src="/js/create-post.js"></script>